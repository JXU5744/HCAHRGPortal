<main class="container neu-margin--top-30">
    <div class="jumbotron-fluid">
        <form class="form-inline" action="Audit/Index">
            <div class="row">
                <div class="col-12">
                    <h3 align="center" class="neu-text--h3 neu-text--bold align-content-xl-center">Search Tickets For Audit/Dispute</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-10">
                    <span id="errormsgforcategory" class="neu-button--danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-4">
                    <label class="neu-input__label">Environment</label>
                    <label>&nbsp;&nbsp;</label>
                    <input type="radio" name="group2" checked="checked"
                           value="PDF"
                           tabindex="0"
                           required class="radio-success" />
                    <label class="neu-input__label">Production</label>
                    <label>&nbsp;</label>
                    <input type="radio" name="group2"
                           value="XML"
                           tabindex="0"
                           required />
                    <label class="neu-input__label">Training</label>
                </div>
                <div class="col-4">
                    <div class="cols" tabindex="-1">
                        <label class="neu-input__label">Select Audit /Dispute</label>
                        <label>&nbsp;&nbsp;</label>
                        <input type="radio" name="group1" checked="checked"
                               value="PDF"
                               tabindex="0"
                               required class="radio-success" />
                        <label class="neu-input__label">Audit</label>&nbsp;
                        <label>&nbsp;</label>
                        <input type="radio" name="group1"
                               value="XML"
                               tabindex="0"
                               required class="radio-success" />
                        <label class="neu-input__label">Dispute</label>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-4">
                    <div tabindex="-1" aria-checked="false" style="text-align:left;">
                        <label class="neu-input__label required" for="format-pdf" style="text-align:left;width:50%">Service Delivery Group</label>
                        <select name="teams" id="CatgID" class="neu-select" title="select"
                                asp-items="@(new SelectList(@ViewBag.ListOfCategory, "CatgID", "CatgDescription"))">
                        </select>
                    </div>
                </div>
                <div class="col-4">
                    <div tabindex="-1" aria-checked="false" style="text-align:left;">
                        <label class="neu-input__label required" for="format-pdf" style="text-align:left;width:25%;">Sub Category</label>
                        <select name="teams" id="SubCatID" class="neu-select">
                            <option value="0">Select SubCategory</option>
                        </select>

                    </div>
                </div>
                <div class="col-4">
                    <div tabindex="-1" aria-checked="false" style="text-align:left;">
                        <label class="neu-input__label required" for="format-pdf" style="text-align:left;width:30%;">Assigned To</label>
                        <input class="neu-input__field" aria-disabled="false" type="text" id="txtassignedto">
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-4">
                    <div tabindex="-1" aria-checked="false" style="text-align:left;width:100%;">
                        <label class="neu-input__label required" for="format-pdf" style="text-align:left;width:30%;">Ticket Status</label>
                        <select name="teams" id="StatusList" class="neu-select">
                            <option value="0">Closed</option>
                            <option value="1">Pending</option>
                        </select>

                    </div>
                </div>
                <div class="neu-input col-4">
                    <div aria-checked="false" style="text-align:left;width:100%;">
                        <label class="neu-input__label">Start Date</label>
                        <input class="neu-input__field" id="startdate" name="startdate" type="text" aria-disabled="false">
                    </div>
                </div>
                <div class="neu-input col-4">
                    <div aria-checked="false" style="text-align:left;width:100%;">
                        <label class="neu-input__label">To Date</label>
                        <input class="neu-input__field" id="enddate" name="enddate" type="text" aria-disabled="false">
                    </div>
                </div>
            </div>
            <br />
            <div class="row" style="text-align:center;width:100%;">
                <div class="col-12">
                    <button asp-controller="Search" id="btnsearch" asp-action="Details" class="neu-button--primary neu-button neu-button--raised">
                        &nbsp;Search
                    </button>
                    <button asp-controller="Search" id="btncancel" asp-action="Index" class="neu-button--danger neu-button neu-button--raised neu-margin--left-10">
                        &nbsp;&nbsp;Clear&nbsp;&nbsp;&nbsp;
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div id="popupcontent" title="Mandate Fields" hidden="hidden" class="container">

        <div class="row">
            <div class="col-sm-2"> </div>
            <div class="col-sm-6">
                <span id="errormsg" style="color:red"></span>
            </div>
            <div class="col-sm-4"><button id="btncancelpopup" class="btn btn-danger">Cancel</button></div>
        </div>
    </div>
</main>

@section Scripts
    {
    <!-- Script for the date range picker -->
    <script type="text/javascript" src="~/js/daterangepicker.js"></script>
    <link rel="stylesheet"
          type="text/css"
          href="~/css/daterangepicker.css" />
    <!-- Script for the date range picker -->
    <script type="text/javascript">
        $(document).ready(function () {
            var dateStart = new Date();
            dateStart.setDate(dateStart.getDate() - 8);

            var dateEnd = new Date();
            dateEnd.setDate(dateEnd.getDate() - 1);

            $('input[name="startdate"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 1901,
                maxYear: parseInt(moment().format('YYYY'), 10)
            }).val(moment(dateStart).format("MM/DD/YYYY"));

            $('input[name="enddate"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 1901,
                maxYear: parseInt(moment().format('YYYY'), 10)
            }).val(moment(dateEnd).format("MM/DD/YYYY"));

            $.ajax({
                type: "POST",
                url: "/search/GetCommaSeperated",
                data: null,
                success: function (response) {
                    $("#txtassignedto").autocomplete({
                        source: response
                    });
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });

            //$("#popupcontent").dialog({
            //    autoOpen: false
            //});

            //$("#popupcontent").dialog({ autoOpen: false, modal: true, height: 190, width: 650 });

            $("#btncancel").click(function () {
                $("#popupcontent").dialog('close');
            });

            $("#btnsearch").click(function () {
                $("#errormsgforcategory").text("");
                debugger
                var environmenttype = $("input[name='group2']:checked").val();

                var screentype = $("input[name='group1']:checked").val();


                var categoryID = $("#CatgID").val();
                var subcategoryID = $("#SubCatID").val();
                var assignedTo = $("#txtassignedto").val();

                var ticketStatus = $("#StatusList").val();

                var startdate = $("#startdate").val();

                var enddate = $("#enddate").val();
                


                if (categoryID == "0" && subcategoryID == "0" && assignedTo == "") {
                    $("#errormsgforcategory").append("Select Either Category Or Sub Category Or Assigned To field.<br/>");
                }

                if ($("#errormsgforcategory").text() != "") {
                    return false;
                }

                var searchparameter = {
                    "EnvironmentType": environmenttype,
                    "ResultType": screentype,
                    "CategoryID": categoryID,
                    "SubcategoryID": subcategoryID,
                    "AssignedTo": assignedTo,
                    "TicketStatus": ticketStatus,
                    "FromDate": startdate,
                    "EndDate": enddate
                }; 

                $.ajax({
                    type: "POST",
                    url: "/search/GetSearchDetails",

                    data: { searchparameter: searchparameter },  
                    
                    success: function (response) {
                        $('#SubCatID').html(''); $("#ShowQuestions").hide();
                        var options = '';
                        options += '<option value="0">Select SubCategory</option>';
                        for (var i = 0; i < response.length; i++) {
                            options += '<option value="' + response[i].SubCatgID + '">' + response[i].SubCatgDescription + '</option>';
                        }
                        $('#SubCatID').append(options);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });

            $("#CatgID").change(function () {
                var categoryID = $('#CatgID').val();
                $.ajax({
                    type: "POST",
                    url: "/search/BindSubCategory",
                    data: { "categoryID": categoryID },
                    success: function (response) {
                        $('#SubCatID').html(''); $("#ShowQuestions").hide();
                        var options = '';
                        options += '<option value="0">Select SubCategory</option>';
                        for (var i = 0; i < response.length; i++) {
                            options += '<option value="' + response[i].SubCatgID + '">' + response[i].SubCatgDescription + '</option>';
                        }
                        $('#SubCatID').append(options);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });

            });

        });

    </script>
}

