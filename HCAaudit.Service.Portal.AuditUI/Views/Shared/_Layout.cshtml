@inject HCAaudit.Service.Portal.AuditUI.Services.IAuthService auth
@using HCAaudit.Service.Portal.AuditUI.Models;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/neutron.css" />
    <link rel="stylesheet" type="text/css" href="~/css/main.css" />
    <link rel="stylesheet" type="text/css" href="~/css/pagination.css" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap-glyphicons.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/fonts/material-icons/material-icons.css" />
</head>

<body>
    <nav class="neu-topnav neu-fixed--top" role="navigation">
        <div class="neu-topnav__compact">
            @*@if (auth.CheckAuditorUserGroup().Result)
        {
            <a asp-controller="search" asp-action="index" class="d-flex align-items-left "><i class="material-icons neu-margin--right-10">home</i></a>
        }
        else
        {
            <a asp-controller="home" asp-action="index" class="d-flex align-items-left "><i class="material-icons neu-margin--right-10">home</i></a>
        }*@

            <!--<div class="logo-title">
        <cell class="show-for-large"></cell><cell>HR Audit Tool</cell>-->
            @*<span style="width:100px;display:inline-block"></span>*@
            <!--</div>-->

            <a asp-controller="search" asp-action="index" class="d-flex align-items-center flex-grow-1">
                <i class="material-icons neu-margin--right-10">home</i>
                <p class="neu-text--product">HR Audit Tool</p>
            </a>


            <div style="z-index: 1;">
                @if (auth.CheckAdminUserGroup().Result)
                {
                    <a asp-controller="Category" asp-action="Index" class="neu-margin--right-20" style="text-decoration:none">Service Delivery Group</a>
                    <a asp-controller="Subcategory" asp-action="Details" class="neu-margin--right-20" style="text-decoration:none">Sub Category</a>
                    <a asp-controller="HRRoster" asp-action="Details" class="neu-margin--right-20" style="text-decoration:none">HR Professional</a>
                    <a asp-controller="Questions" asp-action="Details" class="neu-margin--right-20" style="text-decoration:none">Question Master</a>
                    <a asp-controller="Questions" asp-action="Index" class="neu-margin--right-20" style="text-decoration:none">Question Mapping</a>
                    @*<span style="width:80px;display:inline-block"></span>*@
                }
            </div>

            <!-- User Controls -->
            <div class="neu-user-controls">
                <div>
                    <p>@auth.LoggedInUserInfo().Result.LoggedInFullName</p>
                    <p></p>
                </div>
                <div class="neu-avatar neu-avatar--init neu-margin--left-10"
                     tabindex="0">
                    <small aria-label="user initials here" class="neu-avatar--init__text">@auth.LoggedInUserInfo().Result.Initials</small>
                </div>
            </div>
        </div>

    </nav>

<main class="container neu-padding--top-90 neu-padding--bottom-60">
    @RenderBody()
</main>
    
<footer class="neu-footer--compact neu-footer--compact__navy mt-auto py-3 neu-fixed--bottom">
    <div class="row" role="navigation" id="a11y-menu">
        <div class="col-sm-6">
            <a href="#!">
                <img src="~/images/HCA-Horizontal-white.png"
                     alt="hca healthcare logo"
                     height="20px" />
            </a>
        </div>

        <div class="col-sm-6">
            <p class="neu-text--caption neu-margin--left-10 neu-footer--compact__right-elem">
                ©2021 HCA, Inc. or its affiliates
            </p>
        </div>
    </div>
</footer>

    @RenderSection("Scripts", required: false)
</body>

</html>
